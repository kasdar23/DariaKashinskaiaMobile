<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Web Test Suite">

    <parameter name="property path" value="src/main/resources/webTest.properties"/>

    <test name="Web Test">

        <groups>
            <run>
                <include name="web"/>
            </run>
        </groups>

        <classes>
            <class name="scenarios.webTest"/>
            <class name="scenarios.Hooks"/>
        </classes>

    </test>

</suite>

